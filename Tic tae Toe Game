      <script>
        var bt=document.querySelector("#bn");
var tab=document.querySelectorAll("#sgn");//array of table data
function restart(){
  for(var i=0;i<tab.length;i++)
  {
    tab[i].textContent='';
  }
}
bt.addEventListener('click',restart);
function signchange(){
    if(this.textContent===''){
      this.textContent='X';}
    else if(this.textContent==='X')
      {this.textContent='O';}
    else{
      this.textContent='';}
}
for(var j=0;j<tab.length;j++)
{
  tab[j].addEventListener('click',signchange);
}

      </script>
